<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#FDEBD0"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:background="#FDEBD0">
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#FDEBD0"
                android:onClick="CONDICIONAL_SIMPLE"
                android:id="@+id/CONDICIONAL_SIMPLE"
                android:src="@drawable/presentindicativo"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="cursive"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="CONDICIONAL SIMPLE"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FDEBD0">
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:id="@+id/CONDICIONAL_COMPUESTO"
                android:onClick="CONDICIONAL_COMPUESTO"
                android:src="@drawable/presentindicativo"
                android:background="#FDEBD0"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="CONDICIONAL COMPUESTO"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>